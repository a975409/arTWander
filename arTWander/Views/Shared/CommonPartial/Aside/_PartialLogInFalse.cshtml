                        <div>
                            <input type="radio" name="location" value="taipei"> 台北市<br>
                        </div><br>
                        <div>
                            <input type="radio" name="location" value="taichung"> 台中市<br>
                        </div><br>
                        <div>
                            <input type="radio" name="location" value="kaohsiung"> 高雄市<br>
                        </div><br>
                    </form>
                </li>
                <li class="list-group-item bg-transparent">
                    <a class="" data-toggle="collapse" href="#town" aria-expanded="false" aria-controls="town">
                        鄉鎮
                        <i class="fa fa-chevron-down" aria-hidden="true"></i>
                    </a>
                    <form action="" id="town" class="collapse list-group list-group-flush">
                        <br>
                        <div>
                            <input type="radio" name="location" value="taipei"> 某區<br>
                        </div><br>
                        <div>
                            <input type="radio" name="location" value="taichung"> 某鄉<br>
                        </div><br>
                        <div>
                            <input type="radio" name="location" value="kaohsiung"> 某鄉<br>
                        </div><br>
                    </form>
                </li>
            </ul>
        </li>
        <!-- 地點 end -->
        <!-- 展覽期間 starts -->
        <li class="list-group-item bg-transparent">
            展覽期間
            <hr>
            <ul class="list-group list-group-flush bg-transparent">
                <li class="list-group-item bg-transparent">
                    <div class="form-group">
                        <label for="startDate">開始時間</label>
                        <input type="date" class="form-control" id="startDate">
                    </div>
                </li>
                <li class="list-group-item bg-transparent">
                    <div class="form-group">
                        <label for="endDate">結束時間</label>
                        <input type="date" class="form-control" id="endDate">
                    </div>
                </li>
            </ul>
        </li>
        <!-- 展覽期間 end -->
        <!-- 費用 starts -->
        <li class="list-group-item bg-transparent">
            <div class="form-group">
                <label for="cost">費用</label>
                <select class="form-control" id="cost">
                    <option value="true">是</option>
                    <option value="false">否</option>
                </select>
            </div>
        </li>
        <!-- 費用 end -->
        <!-- 按鈕 starts -->
        <button type="button" class="btn my-2 bg-gray">清除篩選</button>
        <button type="button" class="btn my-2 bg-gray">搜尋展覽</button>
        <!-- 按鈕 end -->
    </ul>
    <!-- 條件查詢 end -->
</div>


