


<div id="aside1Div" class="d-md-block">
    <!-- 關鍵字查詢 starts -->
    <div class="input-group input-group-sm w-100 my-4">
        <input type="text" class="form-control rounded-pill" placeholder="查詢展覽" aria-label="search"
               aria-describedby="buttonSearch">
        <div class="input-group-prepend">
            <button class="btn" type="button" id="buttonSearch"><i class="fa fa-search" aria-hidden="true"></i></button>
        </div>
    </div>
    <!-- 關鍵字查詢 end -->
    <!-- 條件查詢 starts -->
    <ul class="list-group list-group-flush bg-transparent">
        <!-- 地點 starts -->
        <li class="list-group-item bg-transparent">
            <p>地點</p>
            <hr>
            <ul class="list-group list-group-flush bg-transparent">
                <li class="list-group-item bg-transparent">
                    <!-- 縣市start -->
                    <a data-toggle="collapse" href="#city" aria-expanded="false" aria-controls="city">
