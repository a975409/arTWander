
<div id="aside1Div" class="d-md-block">
    <!-- d-flex justify-content-center -->
    <!-- 頭像starts -->
    <figure class="d-flex justify-content-center">
        <div id="asideAvatar" class="d-flex justify-content-center overflow-hidden">
            <img src="@ViewBag.PhotoStickerImage" alt="">
        </div>
    </figure>
    <div class="d-flex justify-content-center w-100 overflow-hidden">
        <p>@ViewBag.userName 您好!</p>
    </div>
    <!-- 頭像end -->
    <!-- 關鍵字查詢 starts -->
    <div class="input-group input-group-sm w-100 my-4">
        <input type="text" id="showKeyword" class="form-control rounded-pill" placeholder="查詢展覽" aria-label="search" aria-describedby="buttonSearch">
        <div class="input-group-prepend">
            <button class="btn" type="button" id="buttonSearch"><i class="fa fa-search" aria-hidden="true"></i></button>
        </div>
    </div>
    <!-- 關鍵字查詢 end -->
    <!-- 條件查詢 starts -->
    <ul class="p-0 p-lg-4">
        <li>
            <a href="@Url.Action("Index","Company")">展演單位資訊</a>
            <hr>
        </li>
        <li>
            <a data-toggle="collapse" href="#search" aria-expanded="false" aria-controls="search">
                進階搜尋
                <i class="fa fa-chevron-down" aria-hidden="true"></i>
            </a>
            <hr>
            <form id="searchMode" method="post" action="@Url.Action("getShowPages","ShowPageManage")">
                <ul id="search" class="collapse show list-group list-group-flush ">
                    <!-- 地點 starts -->
                    <li class="list-group-item bg-transparent">
                        <p class="font-weight-bold">地點</p>
                        <div class="form-group">
                            <label for="FK_City">縣市</label>
                            <select class="form-control" id="FK_City" name="FK_City"></select>
                        </div>
                        <div class="form-group">
                            <label for="FK_District">鄉鎮市區</label>
                            <select class="form-control" id="FK_District" name="FK_District"></select>
                        </div>

                    </li>
                    <!-- 地點 end -->
                    <!-- 展覽期間 starts -->
                    <li class="list-group-item bg-transparent">
                        <p class="font-weight-bold">展覽期間</p>
                        <ul class="list-group list-group-flush bg-transparent ">
                            <li class="list-group-item bg-transparent p-1 p-lg-0">
                                <div class="form-group">
                                    <label for="StartDate">開始日期</label>
                                    <input type="date" class="form-control" id="StartDate" name="StartDate">
                                </div>
                            </li>
                            <li class="list-group-item bg-transparent p-1 p-lg-0">
                                <div class="form-group">
                                    <label for="endDate">結束日期</label>
                                    <input type="date" class="form-control" id="EndDate" name="EndDate">
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- 展覽期間 end -->
                    <!-- 費用 starts -->
                    <li class="list-group-item bg-transparent">
                        <div class="form-group">
                            <label class="font-weight-bold" for="cost">費用</label>
                            <br>
                            <select class="form-control" id="Cost" name="Cost">
                                <option value="0">選擇全部</option>
                                <option value="1">是</option>
                                <option value="2">否</option>
                            </select>
                        </div>
                    </li>
                    <!-- 費用 end -->
                    <!-- 按鈕 starts -->
                    @*<button type="button" class="btn my-2 bg-gray">清除篩選</button>
                        <button type="submit" class="btn my-2 bg-gray">搜尋展覽</button>*@
                    <!-- 按鈕 end -->
                </ul>
            </form>
        </li>
    </ul>
    <!-- 條件查詢 end -->
</div>