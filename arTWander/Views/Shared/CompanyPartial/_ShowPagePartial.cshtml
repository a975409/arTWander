@model arTWander.Models.ShowMinViewModel
<div class="col-12 col-lg-4 position-relative  mb-lg-5">
    <!-- 展覽圖片 starts -->
    <div class="showImg">
        <a href="@Url.Action("DisplayInfo","ShowPageManage",new { showId=Model.Id})">
            <img class="w-100 rounded-sm img-fluid " src="@Model.fileName" alt="">
        </a>
    </div>
    <!-- 展覽圖片 ends -->
    <!-- 展覽敘述卡 strats -->
    <div class="shortDetail">
        <div class="d-flex align-items-center">
            <a href="">@Model.cityName</a>／
            <a href="@Url.Action("DisplayInfo","ShowPageManage",new { showId=Model.Id})">@Model.Title</a>
        </div>
        <div class="description">
            <a href="@Url.Action("DisplayInfo","ShowPageManage",new { showId=Model.Id})">@Model.Description</a>
        </div>
        <div class="d-flex align-items-center ">
            <a class="mr-2" href="#">@Model.Comment comment</a>
            <a href="@Url.Action("DisplayInfo","ShowPageManage",new { showId=Model.Id})"><i style="font-size:16px" class="fas fa-minus text-danger"> 移除展覽</i></a>
        </div>
    </div>
    <!-- 展覽敘述卡 ends -->
</div>