@if (Model.BrowserRemembered)
{
    if (User.IsInRole("Company"))
    {
        <form class="form-group row" method="post" action="/Manage/ForgetBrowser" id="IsRememberBrowser">
            <label class="col-sm-4 col-form-label">記住瀏覽器：</label>
            <div class="col-sm-8">
                <input type="submit" value="已記住" class="btn btn-success" />
            </div>
        </form>
    }
    else
    {
        <form class="col-12 row justify-content-center px-0" method="post" action="/Manage/ForgetBrowser" id="IsRememberBrowser">
            <label class="col-4 col-md-2">記住瀏覽器</label>
            <div class="col-6 px-0 d-flex justify-content-start">
                <input type="submit" value="已記住" class="w-100 btn btn-outline-secondary border-0 bg-gray" />
            </div>
        </form>
    }
}
else
{
    if (User.IsInRole("Company"))
    {
        <form class="form-group row" method="post" action="/Manage/RememberBrowser" id="IsRememberBrowser">
            <label class="col-sm-4 col-form-label">記住瀏覽器：</label>
            <div class="col-sm-8">
                <input type="submit" value="已忘記" class="btn btn-danger" />
            </div>
        </form>
    }
    else
    {
        <form class="col-12 row justify-content-center px-0" method="post" action="/Manage/RememberBrowser" id="IsRememberBrowser">
            <label class="col-4 col-md-2">記住瀏覽器</label>
            <div class="col-6 px-0 d-flex justify-content-start">
                <input type="submit" value="已忘記" class="w-100 btn btn-outline-secondary border-0 bg-gray" />
            </div>
        </form>
    }
}



