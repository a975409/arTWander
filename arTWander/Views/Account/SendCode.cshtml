@model arTWander.Models.SendCodeViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <!-- 驗證nav starts -->
    <ul class="nav nav-tabs d-flex justify-content-center border-bottom-0 " id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <h4>選取二階段驗證方式</h4>
        </li>
    </ul>

    <!-- 驗證nav ends -->
    <div class="tab-content">
        <!-- 驗證欄位 starts -->

        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="row my-3 col-12 col-md-6 mx-auto">
                <div class="w-100 mx-auto text-center">
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers,new { @class= "border-bottom border-top-0 border-left-0 border-right-0 bg-transparent w-50" })
                </div>
            </div>

            <div class="row mt-5 mb-2 justify-content-center">
                <div class="col-6 col-md-3 mx-auto d-flex justify-content-center">
                    <button id="loginBtn" type="submit"
                            class="btn btn-outline-secondary border-0 bg-pink text-white w-100">
                        提交
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
