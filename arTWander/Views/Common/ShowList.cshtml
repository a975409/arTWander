<!-- 展覽列表 starts -->
<div class="container ">
    <div class="row showlistRow">
        
        @if (Model.Count > 0 && Model[0] != null)
        {
            foreach (var show in Model)
            {
                @Html.Partial("~/Views/Shared/CommonPartial/Card/_PartialShowList.cshtml", show);
            }
        }
        else
        {
            <div class="col-12">
                <h5 class="d-flex justify-content-center">
                    @ViewBag.errorMsg
                </h5>
            </div>
        }
    </div>
    
</div>
